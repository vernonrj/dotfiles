[alias]
    log-short = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    log-long = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    log-short-rel = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    log-file = log -u
    graph = log --graph --oneline --decorate --all
    ls-aliases = "!git config -l | grep alias | cut -c 7-"

vim:ft=gitconfig
